<body>
  <main>
    <div class="header">
      <h1>Altair y Antares — Previsualización</h1>
      <div class="btns">
        <!-- Uso onclick directo para evitar problemas con listeners -->
        <button onclick="mostrar('altair')">Altair</button>
        <button onclick="mostrar('antares')">Antares</button>
        <button onclick="ocultar()" title="Ocultar">Ocultar</button>
      </div>
    </div>

    <!-- Previsualización (miniaturas) -->
    <section class="thumbnails" aria-label="Previsualización de imágenes">
      <div class="thumb" role="button" aria-label="Ver Altair" onclick="mostrar('altair')">
        <img
         thubusercontent.com/adisenoOrt/QRPANACEA/027c71b01d0b8fddf3d776952c276a6eab656680/Bandeja%201%20Contenedor%201%20Instrumental.JPG
        <div class="label">Altair</div>
      </div>
      <div class="thumb" role="button" aria-label="Ver Antares" onclick="mostrar('antares')">
        <img
          src="https://raw.githubusercontent.com/adisenoOrt/QRPANACEA/main/Ensamble%20Bande.JPG
        <div class="label">Antares</div>
      </div>
    </section>

    <!-- Visor principal (único <img>) -->
    <section class="viewer" aria-live="polite">
      <img id="viewer" alt="Visor de imagen" loading="eager"
           onerror="this.style.display='none'; document.getElementById('status').textContent='No se pudo cargar la imagen.';">
      <div id="status" class="hint">Pulsa un botón o una miniatura para ver la imagen.</div>
    </section>
  </main>

  <!-- Script al final para evitar problemas de carga -->
  <script>
    const URLS = {
      altair: "https://raw.githubusercontent.com/adisenoOrt/QRPANACEA/027c71b01d0b8fddf3d776952c276a6eab656680/Bandeja%201%20Contenedor%201%20Instrumental.JPG",
      antares:"https://raw.githubusercontent.com/adisenoOrt/QRPANACEA/main/Ensamble%20Bandeja%201%20-%20Antares.JPG"
    };

    function mostrar(estrella) {
      const viewer = document.getElementById('viewer');
      const status  = document.getElementById('status');
      const url = URLS[estrella];

      if (!url) return;

      viewer.style.display = 'none';   // evita parpadeo
      viewer.src = url;                // cambia la imagen
      viewer.onload = () => {
        viewer.style.display = 'block';
        status.textContent = (estrella === 'altair') ? 'Mostrando: Altair' : 'Mostrando: Antares';
      };
    }

    function ocultar() {
      const viewer = document.getElementById('viewer');
      const status  = document.getElementById('status');
      viewer.src = '';
      viewer.style.display = 'none';
      status.textContent = 'Pulsa un botón o una miniatura para ver la imagen.';
    }
  </script>
</body>
</html>
